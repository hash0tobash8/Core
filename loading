local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")
local player = Players.LocalPlayer


local blur = Instance.new("BlurEffect", Lighting)
blur.Size = 6
local colorCorrection = Instance.new("ColorCorrectionEffect", Lighting)
colorCorrection.Contrast = 0.1
colorCorrection.Saturation = 0.2
colorCorrection.TintColor = Color3.fromRGB(255, 255, 255)

TweenService:Create(blur, TweenInfo.new(0.5), {Size = 12}):Play()  -- Reduced from 24 to 12 for softer blur
TweenService:Create(colorCorrection, TweenInfo.new(0.5), {
    Contrast = 0.3, 
    Saturation = 0.1,
    TintColor = Color3.fromRGB(255, 240, 240)
}):Play()

local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "MoondietyLoader"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundTransparency = 1


local bg = Instance.new("Frame", frame)
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(10, 10, 20)
bg.BackgroundTransparency = 1
bg.ZIndex = 0


local bgImage = Instance.new("ImageLabel", bg)
bgImage.Size = UDim2.new(1, 0, 1, 0)
bgImage.Position = UDim2.new(0, 0, 0, 0)
bgImage.BackgroundTransparency = 1
bgImage.Image = "rbxassetid://88747718358978"
bgImage.ImageTransparency = 1  -- Start fully transparent for smooth fade-in
bgImage.ScaleType = Enum.ScaleType.Crop  -- Or Fit/Stretch as needed
bgImage.ZIndex = -1  -- Behind stars


for i = 1, 50 do
    local star = Instance.new("Frame", bg)
    local size = math.random(1, 3)
    star.Size = UDim2.new(0, size, 0, size)
    star.Position = UDim2.new(math.random(), 0, math.random(), 0)
    star.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    star.BackgroundTransparency = 1
    star.BorderSizePixel = 0
    star.AnchorPoint = Vector2.new(0.5, 0.5)

    local starGlow = Instance.new("ImageLabel", star)
    starGlow.Size = UDim2.new(2, 0, 2, 0)
    starGlow.Position = UDim2.new(-0.5, 0, -0.5, 0)
    starGlow.BackgroundTransparency = 1
    starGlow.Image = "rbxassetid://6947150722"  -- Glow texture
    starGlow.ImageTransparency = 1
    starGlow.ImageColor3 = Color3.fromRGB(255, 200, 200)

   
    coroutine.wrap(function()
        while star.Parent do
            local duration = math.random(10, 20) / 10
            local targetTransparency = math.random(3, 8) / 10
            
            TweenService:Create(star, TweenInfo.new(duration), {
                BackgroundTransparency = targetTransparency,
                Rotation = math.random(0, 360)
            }):Play()
            
            TweenService:Create(starGlow, TweenInfo.new(duration), {
                ImageTransparency = targetTransparency + 0.2
            }):Play()
            
            wait(duration)
        end
    end)()
end


TweenService:Create(bg, TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {BackgroundTransparency = 0.5}):Play()  
TweenService:Create(bgImage, TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {ImageTransparency = 0.3}):Play()  

local word = "MOONDIETY"
local letters = {}


local moonContainer = Instance.new("Frame", frame)
moonContainer.Size = UDim2.new(0, 0, 0, 0)  -- Start small
moonContainer.Position = UDim2.new(0.5, 0, 0.8, 0)  -- Start lower
moonContainer.AnchorPoint = Vector2.new(0.5, 0.5)
moonContainer.BackgroundTransparency = 1

local moonGlow = Instance.new("ImageLabel", moonContainer)
moonGlow.Size = UDim2.new(1.5, 0, 1.5, 0)
moonGlow.Position = UDim2.new(-0.25, 0, -0.25, 0)
moonGlow.BackgroundTransparency = 1
moonGlow.Image = ""
moonGlow.ImageColor3 = Color3.fromRGB(200, 255, 255)
moonGlow.ImageTransparency = 0.7

local moon = Instance.new("ImageLabel", moonContainer)
moon.Image = "rbxassetid://133495621202705"
moon.Size = UDim2.new(1, 0, 1, 0)
moon.Position = UDim2.new(0.5, 0, 0.5, 0)
moon.AnchorPoint = Vector2.new(0.5, 0.5)
moon.BackgroundTransparency = 1
moon.ImageTransparency = 1


TweenService:Create(moonContainer, TweenInfo.new(1.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
    Position = UDim2.new(0.5, 0, 0.3, 0),
    Size = UDim2.new(0, 120, 0, 120)
}):Play()

TweenService:Create(moon, TweenInfo.new(1.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
    ImageTransparency = 0,
    Rotation = 180  -- Slower spin
}):Play()

TweenService:Create(moonGlow, TweenInfo.new(1.5, Enum.EasingStyle.Sine), {
    ImageTransparency = 0.7
}):Play()

local function tweenOutAndDestroy()
    
    TweenService:Create(moonContainer, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {
        Size = UDim2.new(0, 300, 0, 300),
        Rotation = moonContainer.Rotation + 90
    }):Play()
    
    TweenService:Create(moonGlow, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {
        ImageTransparency = 0.4,
        Size = UDim2.new(2, 0, 2, 0)
    }):Play()
    
    wait(2)
    
 
    TweenService:Create(moonContainer, TweenInfo.new(1, Enum.EasingStyle.Back), {
        Size = UDim2.new(0, 300, 0, 300)
    }):Play()
    
    TweenService:Create(moon, TweenInfo.new(1), {
        ImageTransparency = 1
    }):Play()
    
    TweenService:Create(moonGlow, TweenInfo.new(1), {
        ImageTransparency = 1
    }):Play()

    
    for i, label in ipairs(letters) do
        wait(0.05 * i)
        TweenService:Create(label.Parent, TweenInfo.new(1, Enum.EasingStyle.Back), {
            Position = label.Parent.Position + UDim2.new(0, math.random(-200, 200), 0, math.random(-200, 200)),
            Rotation = math.random(-90, 90)
        }):Play()
        
        TweenService:Create(label, TweenInfo.new(1), {
            TextTransparency = 1,
            TextStrokeTransparency = 1,
            TextSize = 0
        }):Play()
    end
    
    wait(1)
    
  
    TweenService:Create(bg, TweenInfo.new(1), {BackgroundTransparency = 1}):Play()
    TweenService:Create(bgImage, TweenInfo.new(1), {ImageTransparency = 1}):Play()
    TweenService:Create(blur, TweenInfo.new(1), {Size = 5}):Play()
    TweenService:Create(colorCorrection, TweenInfo.new(1), {
        Contrast = 0,
        Saturation = 0,
        TintColor = Color3.fromRGB(255, 255, 255)
    }):Play()
    

    TweenService:Create(moonContainer, TweenInfo.new(1), {Size = UDim2.new(0, 0, 0, 0)}):Play()

    wait(1)
    screenGui:Destroy()
    blur:Destroy()
    colorCorrection:Destroy()
end


for i = 1, #word do
    local char = word:sub(i, i)
    
    local letterContainer = Instance.new("Frame", frame)
    letterContainer.Size = UDim2.new(0, 70, 0, 80)  
    letterContainer.Position = UDim2.new(0.5, (i - (#word / 2 + 0.5)) * 70, 0.5, 0)  
    letterContainer.BackgroundTransparency = 1
    letterContainer.AnchorPoint = Vector2.new(0.5, 0.5)
    letterContainer.Rotation = math.random(-180, 180) 

    local label = Instance.new("TextLabel", letterContainer)
    label.Text = char
    label.Font = Enum.Font.GothamBlack
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextStrokeTransparency = 0.8
    label.TextStrokeColor3 = Color3.fromRGB(100, 0, 0)
    label.TextTransparency = 1
    label.TextSize = 0  -- Start small
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Position = UDim2.new(0, 0, 0, 0)

 
    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 160, 160)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(139, 0, 0))
    })
    gradient.Rotation = 90
    gradient.Parent = label



    local tweenInfo = TweenInfo.new(0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    TweenService:Create(letterContainer, tweenInfo, {
        Rotation = 0
    }):Play()
    
    TweenService:Create(label, tweenInfo, {
        TextTransparency = 0,
        TextSize = 60
    }):Play()

    table.insert(letters, label)
    wait(0.15)
end


for i, label in ipairs(letters) do
    coroutine.wrap(function()
        local offset = i % 2 == 0 and 15 or -15
        while label.Parent do
            TweenService:Create(label.Parent, TweenInfo.new(3, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {
                Position = label.Parent.Position + UDim2.new(0, 0, 0, offset)
            }):Play()
            wait(3)
            offset = -offset
        end
    end)()
end


coroutine.wrap(function()
    while moonContainer.Parent do
  
        TweenService:Create(moonContainer, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {
            Size = UDim2.new(0, 130, 0, 130)
        }):Play()
        
     
        TweenService:Create(moonGlow, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {
            ImageTransparency = 0.5,
            Size = UDim2.new(1.7, 0, 1.7, 0)
        }):Play()
        
        wait(2)
        
        TweenService:Create(moonContainer, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {
            Size = UDim2.new(0, 120, 0, 120)
        }):Play()
        
        TweenService:Create(moonGlow, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {
            ImageTransparency = 0.7,
            Size = UDim2.new(1.5, 0, 1.5, 0)
        }):Play()
        
        wait(2)
    end
end)()


coroutine.wrap(function()
    while moon.Parent do
        TweenService:Create(moon, TweenInfo.new(30, Enum.EasingStyle.Linear), {
            Rotation = moon.Rotation + 360
        }):Play()
        wait(30)
    end
end)()


wait(5)
tweenOutAndDestroy()
